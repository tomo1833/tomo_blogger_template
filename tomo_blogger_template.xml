<?xml version="1.0" encoding="UTF-8" ?>
  <html>
    <head>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
      <!-- CSS 設定 -->
      <b:skin>
        <![CDATA[
          body {
            background-color: #F2F2F2;
          }

          header {
            height: 75px;
            font-size: 40px;
          }

          nav {
            height: 75px;
            background-color: #414FA3;
            margin: 10px;
          }

          main {
            width: 840px;
            height: 1000px;
            background-color: blue;
            margin: 10px;
          }

          aside {
            width: 380px;
            height: 1000px;
            background-color: blue;
            margin: 10px;
          }

          footer {
            height: 75px;
            background-color: #414FA3;
            color: #ffffff;
            margin: 10px 0 0 0;
          }

          article {
            width: 840px;
            height: 600px;
            background-color: #ffffff;

          }
          .container-wrapper {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
          }

          .contents-footer {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
            margin: 10px;
          }

          .contents-footer-item {
            width: 620px;
            height: 300px;
            background-color: blue;
          }
        ]]>
      </b:skin>
    </head>
    <body>
      <!-- ■■■■■■■■■■■■■■■■■■■■ -->
      <!-- ■  header    　                         -->
      <!-- ■■■■■■■■■■■■■■■■■■■■ -->
      <header>
        <b:section class="header" id="header" maxwidgets="1" showaddelement="yes">
          <b:widget id="Header1" locked="false" title="{タイトル}(Header)" type="Header" version="1">
            <b:widget-settings>
            </b:widget-settings>
         </b:widget>
        </b:section>
      </header>
      <!-- ■■■■■■■■■■■■■■■■■■■■ -->
      <!-- ■  nav    　                            -->
      <!-- ■■■■■■■■■■■■■■■■■■■■ -->
      <nav></nav>
      <div class="container-wrapper">
        <!-- ■■■■■■■■■■■■■■■■■■■■ -->
        <!-- ■  main      　                         -->
        <!-- ■■■■■■■■■■■■■■■■■■■■ -->
        <main>
          <b:section class="main" id="blog" showaddelement="yes">
            <b:widget id="Blog1" locked="true" title="ブログの投稿" type="Blog" version="1">
              <b:widget-settings>
                <b:widget-setting name="showDateHeader">true</b:widget-setting>
                <b:widget-setting name="style.textcolor">#000000</b:widget-setting>
              </b:widget-settings>
              <b:includable id="main" var="top">
                <div>最近の投稿</div>
                <b:loop values="data:posts" var="post">
                  <b:include data="post" name="post"/>
                </b:loop>
              </b:includable>

              <!-- post パーツ -->
              <b:includable id="post" var="post">
                <article>
                  <div><span itemprop="headline"><data:post.title/></span></div>
                  <div class="thumbnail-top">
                    <img class="" expr:src="data:post.firstImageUrl" height="300" width="800" layout="responsive"/>
                  </div>
                </article>
              </b:includable>

            </b:widget>
          </b:section>
        </main>
        <!-- ■■■■■■■■■■■■■■■■■■■■ -->
        <!-- ■  aside      　                        -->
        <!-- ■■■■■■■■■■■■■■■■■■■■ -->
        <aside>
          <div></div>
        </aside>
      </div>

      <div class="contents-footer">
        <div class="contents-footer-item">XXXXX</div>
        <div class="contents-footer-item">XXXXX</div>
      </div>
      <!-- ■■■■■■■■■■■■■■■■■■■■ -->
      <!-- ■  footer    　                         -->
      <!-- ■■■■■■■■■■■■■■■■■■■■ -->
      <footer>XXXXXXXXXX</footer>
    </body>
  </html>